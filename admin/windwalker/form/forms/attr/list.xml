        >
            <option value="0">JNO</option>
            <option value="true">JYES</option>
        </field>
        
        <field
            name="disabled"
            type="radio"
            label="LIB_WINDWALKER_FIELD_ATTR_DISABLED"
            description="LIB_WINDWALKER_FIELD_ATTR_DISABLED_DESC"
            default="0"
            class="btn-group"
        >
            <option value="0">JNO</option>
            <option value="true">JYES</option>
        </field>
    </fieldset>
    
    <fieldset name="options">
        <field
            name="options"
            type="options"
            label="LIB_WINDWALKER_FIELD_ATTR_OPTIONS"
            description="LIB_WINDWALKER_FIELD_ATTR_OPTIONS_DESC"
        >
            <option>JDEFAULT</option>
        </field>
    </fieldset>
