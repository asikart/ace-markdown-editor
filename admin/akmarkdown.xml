<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>plg_system_akmarkdown</name>
	<author>Asika</author>
	<creationDate>2012-11-12</creationDate>
	<copyright>Copyright (C) 2012 Asikart.com</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>asika@asikart.com</authorEmail>
	<authorUrl>http://asikart.com</authorUrl>
	<version>1.0</version>
	<description>PLG_SYSTEM_AKMARKDOWN_XML_DESCRIPTION</description>
	
	
	<scriptfile>install.php</scriptfile>
	
	<!-- plugin system now has no sql file
	<install>
    	<sql>
        	<file driver="mysql" charset="utf8">sql/install.sql</file>
  		</sql>
    </install>
	
	
	<uninstall>
    	<sql>
        	<file driver="mysql" charset="utf8">sql/uninstall.sql</file>
  		</sql>
    </uninstall>
	-->
	
	
	<files>
		<filename plugin="akmarkdown">akmarkdown.php</filename>
		<filename>index.html</filename>
		<filename>install.php</filename>
		<folder>language</folder>
		<folder>lib</folder>
        <folder>windwalker</folder>
	</files>

	<config>
		<fields name="params">

			<fieldset name="basic" addfieldpath="plugins/system/akmarkdown/fields">
				<field
                    name="Hightlight_Theme"
                    type="highlighttheme"
                    label="PLG_SYSTEM_AKMARKDOWN_EDITORS_THEME"
					description="PLG_SYSTEM_AKMARKDOWN_EDITORS_THEME_DESC"
                    default="default"
				>
                    <option value="default">JDEFAULT</option>
                </field>
			</fieldset>

		</fields>
	</config>
	
    <plugins>
        <plugin>plg_editors_akmarkdown</plugin>
    </plugins>
	
	<updateservers>
		<!--<server type="collection">http://akmarkdown.com/list.xml</server>-->
		<server type="extension" priority="1" name="Asikart Akmarkdown Plugin">http://update.asikart.com/plugins/plg_akmarkdown.xml</server>
	</updateservers>
	
	
</extension>
