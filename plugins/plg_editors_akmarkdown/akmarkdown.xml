<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="editors" method="upgrade">
	<name>plg_editors_akmarkdown</name>
	<author>Asika</author>
	<creationDate>2012-11-12</creationDate>
	<copyright>Copyright (C) 2012 Asikart.com</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>asika@asikart.com</authorEmail>
	<authorUrl>http://asikart.com</authorUrl>
	<version>1.0</version>
	<description>PLG_EDITORS_AKMARKDOWN_XML_DESCRIPTION</description>
	
	
	<scriptfile>install.php</scriptfile>
	
	<!-- plugin editors now has no sql file
	<install>
    	<sql>
        	<file driver="mysql" charset="utf8">sql/install.sql</file>
  		</sql>
    </install>
	
	
	<uninstall>
    	<sql>
        	<file driver="mysql" charset="utf8">sql/uninstall.sql</file>
  		</sql>
    </uninstall>
	-->
	
	
	<files>
		<filename plugin="akmarkdown">akmarkdown.php</filename>
		<filename>index.html</filename>
		<filename>install.php</filename>
        <folder>fields</folder>
        <folder>assets</folder>
		<folder>language</folder>
		<folder>lib</folder>
	</files>

	<config>
		<fields name="params">

			<fieldset name="basic" addfieldpath="plugins/editors/akmarkdown/fields">
                <field
                    name="EditorButton_ConvertImg"
                    type="radio"
                    label="PLG_EDITORS_AKMARKDOWN_CONVERT_IMG"
					description="PLG_EDITORS_AKMARKDOWN_CONVERT_IMG_DESC"
                    default="1"
                    class="btn-group"
				>
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <field
                    name="EditorButton_ConvertLink"
                    type="radio"
                    label="PLG_EDITORS_AKMARKDOWN_CONVERT_LINK"
					description="PLG_EDITORS_AKMARKDOWN_CONVERT_LINK_DESC"
                    default="1"
                    class="btn-group"
				>
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <field
                    name="Editor_WordWrap"
                    type="radio"
                    label="PLG_EDITORS_AKMARKDOWN_EDITOR_WORD_WRAP"
					description="PLG_EDITORS_AKMARKDOWN_EDITOR_WORD_WRAP_DESC"
                    default="1"
                    class="btn-group"
				>
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <field
                    name="Editor_SoftWrapNum"
                    type="text"
                    label="PLG_EDITORS_AKMARKDOWN_EDITOR_SOFT_WRAP_NUM"
					description="PLG_EDITORS_AKMARKDOWN_EDITOR_SOFT_WRAP_NUM_DESC"
                    default="0"
                    class="input-small inputbox"
                    size="5"
				/>
                
				<field
                    name="AceEditor_Theme"
                    type="acetheme"
                    label="PLG_EDITORS_AKMARKDOWN_EDITORS_THEME"
					description="PLG_EDITORS_AKMARKDOWN_EDITORS_THEME_DESC"
                    default="twilight"
				>
                </field>
                
                <field
                    name="MarkItUp_Theme"
                    type="markituptheme"
                    label="PLG_EDITORS_AKMARKDOWN_BUTTONS_THEME"
					description="PLG_EDITORS_AKMARKDOWN_BUTTONS_THEME_DESC"
                    default="simple"
				>
                </field>
			</fieldset>

		</fields>
	</config>
		
</extension>
